[colors]
nord0 = #2e3440
nord1 = #3b4252
nord2 = #434c5e
nord3 = #4c566a
nord4 = #d8dee9
nord5 = #e5e9f0
nord6 = #eceff4
nord7 = #8fbcbb
nord8 = #88c0d0
nord9 = #81a1c1
nord10 = #5e81ac
nord11 = #bf616a
nord12 = #d08770
nord13 = #ebcb8b
nord14 = #a3be8c
nord15 = #b48ead

nord1transparent = #d03b4252
nord10transparent = #d05e81ac

[bar/main]
monitor = ${env:MAIN_MONITOR:HDMI-0}
radius = 6.0
padding-right = 1
fixed-center = true
height = 27

background = ${colors.nord0}
text = ${colors.nord4}

font-0 = Iosevka:style=Mesium:pixelsize=11
font-1 = Font Awesome 5 Free Regular:style=Regular:pixelsize=12
font-2 = Font Awesome 5 Free Solid:style=Solid:pixelsize=12
font-3 = Font Awesome 5 Brands Regular:style=Regular:pixelsize=12

modules-left = bspwm
modules-center = title
modules-right = pulseaudio wireless-network wired-network memory cpu date battery
module-margin = 1

tray-position = right

; Cover the bar when in full screen
wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize

[module/title]
type = internal/xwindow
label = %title%
label-maxlen = 30

[module/bspwm]
type = internal/bspwm
pin-workspaces = false

label-focused = 
label-focused-foreground = ${colors.nord7}
label-focused-background = ${colors.nord1}
label-focused-padding = 1

label-occupied = 
label-occupied-foreground = ${colors.nord9}
label-occupied-padding = 1

label-urgent = 
label-urgent-background = ${colors.nord11}
label-urgent-padding = 1

label-empty = 
label-empty-foreground = ${colors.nord10}
label-empty-padding = 1

[module/mpd]
type = internal/mpd
format-online = <icon-prev> <label-song> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/backlight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = ${colors.nord4}
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = ${colors.nord13}
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.nord3}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.nord15}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.nord7}
label = %percentage_used%%

[module/wired-network]
type = internal/network
interface = enp31s0
interval = 3.0

format-connected = <label-connected>
label-connected = %{F#a3be8c}%{F-} %downspeed%
label-connected-foreground = ${colors.nord4}

format-disconnected = <label-disconnected>
label-disconnected =  Disconnected
label-disconnected-foreground = ${colors.nord3}

[module/wireless-network]
inherit = module/wired-network
interface = wlp58s0

label-connected = %{F#a3be8c}%{F-} %downspeed%
label-disconnected =  Disconnected

[module/date]
type = internal/date
interval = 5

date = " %Y-%m-%d"
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.nord10}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = " "
label-volume-foreground = ${colors.nord3}

format-muted-prefix = " "
format-muted-foreground = ${colors.nord3}
label-muted = muted

# backup character (unifont?) ━
bar-volume-width = 10
bar-volume-foreground-0 = ${colors.nord14}
bar-volume-foreground-1 = ${colors.nord14}
bar-volume-foreground-2 = ${colors.nord14}
bar-volume-foreground-3 = ${colors.nord13}
bar-volume-foreground-4 = ${colors.nord13}
bar-volume-foreground-5 = ${colors.nord12}
bar-volume-foreground-6 = ${colors.nord11}
bar-volume-gradient = false
bar-volume-indicator = -
bar-volume-indicator-font = 1
bar-volume-fill = -
bar-volume-fill-font = 1
bar-volume-empty = -
bar-volume-empty-font = 1
bar-volume-empty-foreground = ${colors.nord3}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>

format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix = " "
format-full-prefix-foreground = ${colors.nord14}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.nord13}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.nord14}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.nord12}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-foreground = ${colors.nord13}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

